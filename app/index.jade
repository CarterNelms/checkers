doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title Checkers
		link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/pure-min.css')
		link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/grids-responsive-min.css')
		link(rel='stylesheet', href='css/app.css')
	body
		h1 Checkers
		#page-wrap
			#board
				table
					thead
						tr
							button#start Start
							th
					tbody
						- var rows = 8;
						- var cols = 8;
						- for(var i = 0; i < rows; ++i)
							tr
								- for(var j = 0; j < cols; ++j)
									- var playableClass = ((i+j)%2) ? 'playable' : '';
										td(class="square "+playableClass, data-x=j, data-y=i)
											div

		script(src='js/vendor/jquery-2.1.0.js')
		script(src='js/source/main.js')
